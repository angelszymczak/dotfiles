{
    "editor.fontSize": 18,
    "editor.suggestSelection": "first",
    "editor.rulers": [
        80
    ],
    "editor.tabSize": 2,
    "editor.wordWrap": "off",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.excludeGitIgnore": false,
    "search.useGlobalIgnoreFiles": true,
    "search.useIgnoreFiles": true,
    "files.autoSave": "onFocusChange",
    "files.eol": "\n",
    // View
    "workbench.activityBar.visible": false,
    "workbench.statusBar.visible": false,
    "editor.minimap.enabled": false,
    "editor.dragAndDrop": false,
    "workbench.editor.showTabs": false,
    "explorer.openEditors.visible": 5,
    // Apparence
    "workbench.colorTheme": "Codely Dark",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "explorer.compactFolders": false,
    "editor.renderWhitespace": "trailing",
    "workbench.list.horizontalScrolling": true,
    "workbench.sideBar.location": "left",
    "workbench.tree.indent": 20,
    "editor.bracketPairColorization.enabled": true,
    "editor.lightbulb.enabled": false,
    "editor.cursorBlinking": "blink",
    // Use tab to suggestion autocomplete
    "editor.acceptSuggestionOnEnter": "off",
    "editor.acceptSuggestionOnCommitCharacter": false,
    // Actions
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "[typescript]": {
        "editor.formartOnSave": false,
        "editor.codeActionsOnSave": [
            "source.addMissingImports",
            "source.fixAll.eslint"
        ],
    },
    // Extensions
    "focus.opacity": "0.7",
    "focus.highlightRange": "block",
    "symbols.hidesExplorerArrows": false,
    "workbench.iconTheme": "symbols",
    "workbench.productIconTheme": "fluent-icons",
    "editor.fontFamily": "DankMono Nerd Font",
    "editor.lineHeight": 2.1,
    "terminal.integrated.fontFamily": "DankMono Nerd Font",
    "breadcrumbs.symbolPath": "off",
    // Others
}